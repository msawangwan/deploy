#!/bin/sh

cd ..

echo "root dir:"
pwd

VERSION="$(/bin/cat conf/globals.json | /bin/grep version)"

echo "version:"
echo "$VERSION"

echo "build:"

# docker build -t ci.io .
# docker run -p 9001:80 -it --rm --name ci.io.running ci.io
docker system prune -f
docker build -t ci.io.root .
docker run --rm -it --name ci.io.root -v /var/run/docker.sock:/var/run/docker.sock ci.io.root
# docker run --rm -it --name ci.io.root -v /var/run/docker.sock:/var/run/docker.sock docker