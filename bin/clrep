#!/bin/sh

echo "clrep (clone repository)"; echo

if [ $# != 2 ]; then
    echo "err: missing args"
    echo "usage: `basename $0` <username> <repo>"; echo
    exit 1
fi

PREFIX="https://github.com"
SUFFIX=".git"

USERNAME="/$1"
REPO="/$2"

URL="${PREFIX}${USERNAME}${REPO}${SUFFIX}"
WD="$(pwd)"

echo "cloning ${URL} into ${WD}"

git clone "${URL}"
