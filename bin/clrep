#!/bin/sh

echo "clrep (clone repository)"; echo

if [ $# != 4 ]; then
    echo "err: missing args"
    echo "usage: `basename $0` <username> <token> <dirname> <repo>"; echo
    exit 1
fi

SCHEME="https"
PREFIX="github.com"
SUFFIX=".git"

USERNAME="$1"
OAUTH="$2"
WS="$3"
REPO="$4"

# WS="$(mktemp -d $REPO.XXXXXX)"

URL="${SCHEME}://${OAUTH}@${PREFIX}/${USERNAME}/${REPO}${SUFFIX}"
WD="$(pwd)"

echo "pulling ${URL}"
echo "into ${WD}"

git init # don't clone cus it writes creds to .git/config?
git pull "${URL}"

exit 0
